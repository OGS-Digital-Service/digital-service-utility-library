<script>
  setTimeout(() => {

      // Get the live collection of elements
const controls = document.getElementsByClassName('dtr-control');

// Convert to an array so we can use forEach, or use a for loop
for (let i = 0; i < controls.length; i++) {
    const element = controls[i];
    
    // 1. Get the value (text content)
    const value = element.innerText || element.textContent;
    
    // 2. Apply the aria-label
    element.setAttribute('aria-label', `${value.trim()} click to expand details`);
    
   
}
  
}, 1000);
   

</script>