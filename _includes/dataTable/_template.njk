<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.js" ></script>
<script src="https://cdn.datatables.net/responsive/3.0.8/js/dataTables.responsive.min.js" ></script>

<script>
    {% if params.tablename == "phonefree" %}
        {% include './_scrollTable.js' %}
    {% else %}
        {% include './_responsiveTable.js' %}
         {% include './_a11yControl.js' %}
    {% endif %}
</script>

{%set tableData = params.dataSource %}

<h2 class=""> 
    <span class="a-pHeadline a-card__subHeadline">{{params.title}}</span>
</h2>



<table id="{{params.tableName}}" class="display">
    <caption>
        {{params.caption}}
    </caption>
    <thead class="">
        <tr>
            {% for headers in params.tableHeaders %}
            <th scope="col">{{headers.title}}</th>
            {% endfor %}  
        </tr>
    </thead>

    {% if params.tablename == "phonefree"%}
    <tbody>
        {% for data in tableData %}
            <tr>
                <td> 
                    {% if data.status === "Submitted" %}
                        <a href="{{data.link}}"> School Policy <span class="sr-only"> for {{data.name}}</span> </a>
                    {% else %}
                        <em> Contact School </em>
                    {% endif %}
                
                </td>
                <td> {{data.name}} </td>
                <td> {{data.type}} </td>
                <td> {{data.county}} </td>
                
            </tr>
        {% endfor %}
    </tbody>
    {% else %}
    <tbody>
        {% for data in tableData %}
            <tr>
                <td> {{data.organization_name}} </td>
                <td> {{data.point_of_contact}} </td>
                <td> {{data.phone_number}} </td>
                <td> {{data.email_address}} </td>
                <td> {{data.remote_or_in_person}} </td>
                <td> {{data.in_person_cart_rates}} </td>
                <td> {{data.regions_served}} </td>
                <td> {{data.cart_other_languages}} </td>
                <td> {{data.languages_offered}} </td>
                <td> {{data.based_in_ny_state}} </td>
                <td> {{data.remote_cart_rates}} </td>
                
            </tr>
        {% endfor %}
    </tbody>
    {% endif %}

</table>

{% if params.disclaimer %}
    <p class="nysds-table-disclaimer"><em>{{params.disclaimer}}</em></p>
{% endif %}